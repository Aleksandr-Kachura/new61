<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widgets.xsd">

    <widget-extension widgetId="backofficeMainSlot">
        <widget id="turntobackoffice-perspective" widgetDefinitionId="de.hybris.turntobackoffice.widgets.turntobackofficewidget"
            template="false" slotId="perspectives" title="Hello turntobackoffice">
            <setting key="perspectiveImageUrl" type="String" value="/cng/images/turnTo-28.png"/>
        </widget>
    </widget-extension>

    <widget-connection sourceWidgetId="turntobackoffice-explorer-tree" outputId="nodeSelected" targetWidgetId="turntobackoffice-tree-node-adapter" inputId="input"/>
    <widget-connection sourceWidgetId="turntobackoffice-tree-node-adapter" outputId="true" targetWidgetId="turntobackoffice-typecode-extractor" inputId="genericInput"/>
    <widget-connection sourceWidgetId="turntobackoffice-tree-node-adapter" outputId="true" targetWidgetId="turntobackoffice-search-enabler" inputId="genericInput"/>
    <widget-connection sourceWidgetId="turntobackoffice-tree-node-adapter" outputId="false" targetWidgetId="turntobackoffice-search-disabler" inputId="genericInput"/>
    <widget-connection sourceWidgetId="turntobackoffice-typecode-extractor" outputId="genericOutput" targetWidgetId="turntobackoffice-search-logic" inputId="type"/>
    <widget-connection sourceWidgetId="turntobackoffice-search-enabler" outputId="genericOutput" targetWidgetId="turntobackoffice-text-search" inputId="enabled"/>
    <widget-connection sourceWidgetId="turntobackoffice-search-disabler" outputId="genericOutput" targetWidgetId="turntobackoffice-text-search" inputId="enabled"/>
    <widget-connection sourceWidgetId="turntobackoffice-text-search" outputId="query" targetWidgetId="turntobackoffice-search-logic" inputId="searchtext"/>
    <widget-connection sourceWidgetId="turntobackoffice-search-logic" outputId="pageable" targetWidgetId="turntobackoffice-simple-list" inputId="pageable"/>

</widgets>
